{
  "compilerOptions": {
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/**/*"]
}
